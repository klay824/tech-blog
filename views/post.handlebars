<div class="card">
  <a href="/post/{{id}}" class="card-link">
    <h5 class="card-header">{{title}}</h5>
  </a>
  <div class="card-body">
    <h5 class="card-title">Post by: {{user.username}} on {{format_date date_created}}</h5>
    <p class="card-text">{{content}}</p>
  </div>


  {{#if logged_in}}
  <form class='new-comment'>
    <div class='form-group'>
      <input class='form-control' type='text' id='reader-comment' />
    </div>
    <div class='form-group'>
      <button type='submit' class='btn'>Submit Comment</button>
    </div>
  </form>

  {{!-- add comment js will go here --}}
  <script src="/js/comment.js"></script>
  {{/if}}

</div>