<div class="card">
  <a href="/post/{{id}}" class="card-link">
    <h5 class="card-header">{{title}}</h5>
  </a>
  <div class="card-body">
    <h5 class="card-title">Post by: {{user.username}} on {{format_date date_created}}</h5>
    <p class="card-text">{{content}}</p>
  </div>
  {{#each post.comments as |comment|}}
  <div class='media'>
    <div class='media-body text-right'>
      <p>Comment posted by: {{user.username}} on {{format_date created_at}}</p>
      <h6>{{comment.comment}}</h6>
    </div>
  </div>
  {{/each}}
</div>