<div class="row" id="newPost">
    <div class="col-md-12">
        <h3>New Post:</h3>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">Post title:</label>
                <input class="form-input" type="text" id="post-name" name="post-name" />
            </div>
            <div class="form-group">
                <label for="project-content">Content:</label>
                <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="button" class="postBtn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<div>
    <h3>
        Your post history:
    </h3>
    <div>
        {{#each posts as |post|}}
        <div>
            <div>
                <h3>
                    <a href="/post/{{post.id}}">{{post.title}}</a>
                </h3>
                <p>{{post.body}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>